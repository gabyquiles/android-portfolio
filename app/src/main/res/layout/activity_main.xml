<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/background_floating_material_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nanodegree_title"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spotify_app"
        android:id="@+id/spotify_streamer_btn"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#42A5F5"
        android:padding="5dp"
        android:onClick="callSpotifyApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores_app"
        android:id="@+id/scores_btn"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#42A5F5"
        android:padding="5dp"
        android:onClick="callScoresApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_app"
        android:id="@+id/library_btn"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#42A5F5"
        android:padding="5dp"
        android:onClick="callLibraryApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger_app"
        android:id="@+id/buid_it_bigger_btn"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#42A5F5"
        android:padding="5dp"
        android:onClick="callBuildItBiggerApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xyz_reader_app"
        android:id="@+id/xyz_reader_btn"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#42A5F5"
        android:padding="5dp"
        android:onClick="callXYZReaderApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone_app"
        android:id="@+id/capstone_btn"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#FBC02D"
        android:padding="5dp"
        android:onClick="callCapstoneApp" />
</LinearLayout>
